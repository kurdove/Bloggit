<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>
      <h1>New Flair</h1>
      <form action="/topics/<%= topicId %>/flairs/create" method="post">
        <div class="form-group">
          <label for="name">Flair name</label>
          <input type="text" class="form-control" name="name" aria-describedby="nameHelp" placeholder="Enter Name">
          <small class="text-muted" id="titleHelp">name must be 2 or more characters in length.</small>
        </div>
        <div class="form-group">
          <label for="color">Flair color</label>
          <textarea rows="4" class="form-control" name="color" placeholder="Enter Flair color"></textarea>
          <small class="text-muted" id="bodyHelp">color must be 10 or more characters in length.</small>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>